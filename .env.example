# QMTL Strategies Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_BACKEND=sqlite
DATABASE_DSN=./qmtl.db
# For PostgreSQL, use:
# DATABASE_BACKEND=postgres
# DATABASE_DSN=postgresql://user:password@host:port/database

# Redis Configuration
REDIS_DSN=redis://localhost:6379

# Gateway Configuration
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=8000

# DAG Manager Configuration
MEMORY_REPO_PATH=memrepo.gpickle
GRPC_HOST=0.0.0.0
GRPC_PORT=50051
HTTP_HOST=0.0.0.0
HTTP_PORT=8000

# Optional: Neo4j Configuration (for cluster mode)
# NEO4J_DSN=bolt://localhost:7687
# NEO4J_USER=neo4j
# NEO4J_PASSWORD=neo4j

# Optional: Kafka Configuration (for cluster mode)
# KAFKA_DSN=localhost:9092

# Backtest Configuration
BACKTEST_START_TIME=2023-01-01T00:00:00Z
BACKTEST_END_TIME=2024-01-01T00:00:00Z

# Strategy Configuration
ENABLE_BINANCE_HISTORY=true
ENABLE_ALPHA_SIGNAL=true
