{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://qmtl.dev/schemas/world.schema.json",
  "title": "World",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "world_id": { "type": "string" },
    "contract_id": { "type": "string" },
    "market_config": { "type": "object" },
    "dataset_fingerprint": { "type": "string", "pattern": "^lake:blake3:.*$" },
    "risk_limits": { "type": "object" }
  },
  "required": ["world_id", "contract_id", "market_config", "dataset_fingerprint", "risk_limits"]
}
