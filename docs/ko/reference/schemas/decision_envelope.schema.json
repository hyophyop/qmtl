{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://qmtl.dev/schemas/decision_envelope.schema.json",
  "title": "DecisionEnvelope",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "world_id": { "type": "string" },
    "policy_version": { "type": "integer", "minimum": 0 },
    "effective_mode": { "type": "string", "enum": ["validate", "compute-only", "paper", "live", "shadow"] },
    "execution_domain": { "type": "string", "enum": ["backtest", "dryrun", "live", "shadow"] },
    "compute_context": { "type": "object", "additionalProperties": true },
    "reason": { "type": "string" },
    "as_of": { "type": "string", "format": "date-time" },
    "ttl": { "type": "string" },
    "etag": { "type": "string" }
  },
  "required": ["world_id", "policy_version", "effective_mode", "as_of", "ttl", "etag"]
}
