{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://qmtl.dev/schemas/node.schema.json",
  "title": "GSG Node",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "node_id": { "type": "string", "pattern": "^blake3:.*$" },
    "node_type": { "type": "string", "enum": ["Operator", "Source", "Rule", "Root"] },
    "schema_version": { "type": "string" },
    "interval": { "type": ["string","integer"] },
    "period": { "type": "integer", "minimum": 1 },
    "params": { "type": "object" },
    "dependencies": { "type": "array", "items": { "type": "string", "pattern": "^blake3:.*$" } },
    "code_version": { "type": "string" },
    "schema_id": { "type": "string" }
  },
  "required": ["node_id", "node_type", "schema_version", "interval", "period", "params", "dependencies", "code_version"]
}
