{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://qmtl.dev/schemas/portfolio_snapshot.schema.json",
  "title": "PortfolioSnapshot",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "world_id": { "type": "string" },
    "as_of": { "type": "string", "format": "date-time" },
    "version": { "type": "string" },
    "weights": {
      "type": "object",
      "additionalProperties": { "type": "number" }
    },
    "covariance": {
      "type": "object",
      "additionalProperties": { "type": "number" }
    },
    "covariance_ref": { "type": "string" },
    "realized_returns": {
      "oneOf": [
        {
          "type": "object",
          "additionalProperties": {
            "type": "array",
            "items": { "type": "number" }
          }
        },
        {
          "type": "array",
          "items": { "type": "number" }
        }
      ]
    },
    "realized_returns_ref": { "type": "string" },
    "stress_ref": { "type": "string" },
    "stress": { "type": "object", "additionalProperties": true },
    "constraints": { "type": "object", "additionalProperties": true },
    "provenance": { "type": "object", "additionalProperties": true },
    "hash": { "type": "string" },
    "ttl_sec": { "type": "integer", "minimum": 1 },
    "created_at": { "type": "string", "format": "date-time" }
  },
  "required": ["world_id", "as_of", "version", "weights"]
}
