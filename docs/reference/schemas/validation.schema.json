{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://qmtl.dev/schemas/validation.schema.json",
  "title": "Validation",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "eval_key": { "type": "string", "pattern": "^blake3:.*$" },
    "world_id": { "type": "string" },
    "node_id": { "type": "string", "pattern": "^blake3:.*$" },
    "result": { "type": "string", "enum": ["valid","invalid","warning"] },
    "metrics": { "type": "object" },
    "timestamp": { "type": "string", "format": "date-time" }
  },
  "required": ["eval_key", "world_id", "node_id", "result", "metrics", "timestamp"]
}
